<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="za.co.storycheck"
          android:versionCode="10"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application android:label="@string/app_name"
                 android:icon="@drawable/icon"
                 android:name=".StoryCheckApplication"
                 android:theme="@style/Theme.Storycheck">
        <activity android:name=".StoryListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddStoryActivity"/>
        <activity android:name=".EditStoryActivity"/>
        <activity android:name=".DeleteStoryActivity"/>
        <activity android:name=".StoryActivity"/>
        <activity android:name=".StoryReportActivity"/>
        <activity android:name=".AboutActivity"/>
    </application>
</manifest>
