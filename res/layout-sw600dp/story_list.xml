<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/bg"
        >
    <fragment
            android:id="@+id/frag_story_list"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            class="za.co.storycheck.fragment.StoryListFragment"
            />
    <LinearLayout
            android:layout_width="4dp"
            android:background="@color/bg_light"
            android:layout_height="fill_parent"
        />
    <LinearLayout android:id="@+id/ll_detail"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
            >
        <TextView android:orientation="vertical"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="Checklist for story:"
                          android:layout_marginTop="8dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          />
        <TextView android:id="@+id/tv_headline"
                  android:textSize="17sp"

                          android:orientation="vertical"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="8dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          />
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@color/bg_light"
           />
        <fragment
                android:id="@+id/frag_story_detail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                class="za.co.storycheck.fragment.StoryFragment"
                />
            </LinearLayout>

</LinearLayout>

